@model List<SmartTaskerMini.Core.Domain.TaskItem>
@{
    ViewData["Title"] = "Tasks";
}

<h2>Tasks</h2>

<a href="/Tasks/Create" class="btn btn-primary mb-3">Add Task</a>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Due Date</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.DueUtc.ToString("MMM dd, yyyy")</td>
                    <td>@task.Priority</td>
                    <td>
                        <a href="/Tasks/Edit/@task.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form method="post" style="display:inline">
                            <button type="submit" asp-action="Complete" asp-route-id="@task.Id" class="btn btn-success btn-sm">Done</button>
                        </form>
                        <form method="post" style="display:inline">
                            <button type="submit" asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tasks found.</p>
}